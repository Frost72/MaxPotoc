<Window x:Class="MaxPotoc.Ford"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MaxPotoc"
        mc:Ignorable="d"
        Title="Ford" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical" Grid.Row="0" Margin="0,0,0,10">
            <TextBlock Text="Введите граф (Формат: Источник-Цель-Пропускная способность, например: 0-1-10)" />
            <TextBox x:Name="GraphInput" Height="60" AcceptsReturn="True" TextWrapping="Wrap" />
        </StackPanel>
        <Button Content="Вычислить" HorizontalAlignment="Right" Margin="0,107,525,264" 
         Width="265" Click="CalculateButton_Click" RenderTransformOrigin="0.515,0.558" />

        <!-- Результат -->
        <TextBox x:Name="ResultOutput" Margin="0,212,0,0" TextWrapping="Wrap" 
          IsReadOnly="True" VerticalScrollBarVisibility="Auto" />

    </Grid>
</Window>
